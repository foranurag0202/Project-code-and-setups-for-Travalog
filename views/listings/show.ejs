<% layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3 class="offset-3">Listing details</h3>
    <div class="card col-6 offset-3 show-card">
        <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing image">
        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title%></b><br>
            <%=listing.description%><br>
            &#8377;<%=listing.price.toLocaleString("en-IN")%><br>
            <%=listing.location%><br>
            <%=listing.country%>


        </p>
        </div>
    </div>

    
    <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset-3 edit-btn">Edit</a>
    
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button type="submit" style="color: red; " class="btn btn-dark  offset-4 ">Delete</button>
    </form>
</div>
</div>
</div>
</body>
</html>